%If here the mind becomes stable.       
%-----------------------
         \app{\lem[wit={ceteri}]{yadyatra}
           \rdg[wit={L,B}]{yadyatram api}
           \rdg[wit={N1,D}]{yadyanna}}
         \app{\lem[wit={E,P}]{manaḥ sthiraṃ}
           \rdg[wit={ceteri}]{manasthiraṃ}}
         \app{\lem[wit={ceteri}]{bhavati}}\dd{}         
    \end{prose}
  \end{ekdosis}
