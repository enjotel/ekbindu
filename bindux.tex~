         \app{\lem[wit={N2,U1}]{bhakṣitaṃ}
           \rdg[wit={N1}]{bhakṣitam}
           \rdg[wit={D}]{bhakṣitāṃ}
           \rdg[wit={E,P,L,U2}]{bhakṣitam api}
           \rdg[wit={B}]{bhākṣitamār pi}}
