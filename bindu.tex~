  \begin{alignment}
    \begin{edition}
     \ekddiv{head=XIII, depth=2, n=6.13, type=section} 
\begin{prose}
  \app{\lem[wit={E,L,N1,D1,U1,U2}]{śrī gaṇeśāya namaḥ}\rdg[wit={P}]{śrī ṇe ya maḥ}\rdg[wit={N1}]{śrī gurave namaḥ}\rdg[wit={D1}]{śrī sarasvatyai namaḥ śrī nirañjanāya namaḥ}\rdg[wit={U1}]{oṃ śrī niraṃjanāya}} //
\app{\lem[wit={N1,D1}]{atha rājayogaprakāro likhyate}\rdg[wit={U1}]{atha rājayogaprakāra  likhyate}\rdg[wit={E}]{rājayogāntargataḥ / binduyogaḥ}\rdg[wit={L}]{atha tattvabiṃduyogaprāraṃbhaḥ}\rdg[wit={P}]{atha rājayoga liṣyate}\rdg[wit={U2}]{atha rājayoga likhyate}} //
\end{prose}
\end{edition}
    \begin{translation}
      \ekddiv{head=XIII, depth=2, n=6.13, type=section}
      Homage to Śrī Gaṇeśa. Now the methods of rājayoga are laid down.
    \end{translation}
    \begin{edition}
      \ekddiv{head=XIIII, depth=2, n=6.13, type=section}
